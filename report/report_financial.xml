<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_financial">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <h2 class="text-center mb32">
                        <t t-esc="data['account_report_id'][1]"/>
                    </h2>

                    <div class="row mt32 mb32">
                        <div class="col-4">
                            <strong>Target Moves:</strong>
                            <p>
                                <span t-if="data['target_move'] == 'all'" class="text-muted">All Entries</span>
                                <span t-if="data['target_move'] == 'posted'" class="text-muted">All Posted Entries</span>
                            </p>
                        </div>
                        <div class="col-4">
                            <p>
                                <t t-if="data['date_from']">
                                    <strong>Date from:</strong>
                                    <span class="text-muted ml-2" t-esc="data['date_from']"/>
                                    <br/>
                                </t>
                                <t t-if="data['date_to']">
                                    <strong>Date to:</strong>
                                    <span class="text-muted ml-2" t-esc="data['date_to']"/>
                                </t>
                            </p>
                        </div>
                        <div class="col-4">
                            <strong>Company:</strong>
                            <p class="text-muted" t-esc="data['company_id'][1]"/>
                        </div>
                    </div>

                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th t-if="data['debit_credit']" class="text-right">Debit</th>
                                <th t-if="data['debit_credit']" class="text-right">Credit</th>
                                <th class="text-right">Balance</th>
                                <th t-if="data['enable_filter']" class="text-right">Previous Period</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="lines" t-as="line">
                                <t t-set="style" t-value="'font-weight: ' + ('normal' if line.get('unfoldable', False) else 'bold')"/>
                                <td>
                                    <span t-if="line.get('unfoldable', False)" class="text-muted" t-esc="'    ' * line.get('level', 0)"/>
                                    <span t-att-style="style" t-esc="line.get('name')"/>
                                </td>
                                <td t-if="data['debit_credit']" class="text-right" style="white-space: nowrap;">
                                    <span t-att-style="style" t-esc="line.get('columns')[0].get('no_format')" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                </td>
                                <td t-if="data['debit_credit']" class="text-right" style="white-space: nowrap;">
                                    <span t-att-style="style" t-esc="line.get('columns')[1].get('no_format')" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                </td>
                                <td class="text-right" style="white-space: nowrap;">
                                    <span t-att-style="style" t-esc="line.get('columns')[-1].get('no_format')" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                </td>
                                <td t-if="data['enable_filter']" class="text-right" style="white-space: nowrap;">
                                    <span t-att-style="style" t-esc="line.get('columns')[-2].get('no_format')" t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row justify-content-end">
                        <div class="col-4">
                            <table class="table table-sm">
                                <tr class="border-black">
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-esc="sum(line.get('columns')[-1].get('no_format', 0.0) for line in lines if not line.get('unfoldable', False))"
                                              t-options="{'widget': 'monetary', 'display_currency': env.company.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>