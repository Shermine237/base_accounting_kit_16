<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_financial">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <div class="page">
                    <!-- En-tête du rapport -->
                    <div class="row mb32">
                        <div class="col-12">
                            <h2><t t-esc="docs.name"/></h2>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Company:</strong> <t t-esc="company.name"/>
                                </div>
                                <div class="col-6 text-right">
                                    <div t-if="data['form'].get('date_from')">
                                        <strong>Date from:</strong> <t t-esc="data['form']['date_from']"/>
                                    </div>
                                    <div t-if="data['form'].get('date_to')">
                                        <strong>Date to:</strong> <t t-esc="data['form']['date_to']"/>
                                    </div>
                                    <div>
                                        <strong>Target Moves:</strong>
                                        <t t-if="data['form']['target_move'] == 'all'">All Entries</t>
                                        <t t-if="data['form']['target_move'] == 'posted'">All Posted Entries</t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Tableau des données -->
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th t-if="data['form'].get('debit_credit')" class="text-right">Debit</th>
                                <th t-if="data['form'].get('debit_credit')" class="text-right">Credit</th>
                                <th class="text-right">Balance</th>
                                <th t-if="data['form'].get('enable_filter')" class="text-right">
                                    <t t-if="data['form']['filter_cmp'] == 'filter_date'">
                                        Balance <t t-esc="data['form']['date_from_cmp']"/> - <t t-esc="data['form']['date_to_cmp']"/>
                                    </t>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="lines" t-as="line">
                                <!-- Ligne de compte -->
                                <tr t-att-style="'padding-left: ' + str(line.get('level', 0) * 20) + 'px;'">
                                    <td t-att-style="'padding-left: ' + str(line.get('level', 0) * 20) + 'px;'">
                                        <span t-att-style="'font-weight: ' + ('bold' if line.get('level') == 1 else 'normal') + ';'">
                                            <t t-esc="line.get('name')"/>
                                        </span>
                                    </td>
                                    <td t-if="data['form'].get('debit_credit')" class="text-right">
                                        <t t-esc="line.get('debit')" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                    </td>
                                    <td t-if="data['form'].get('debit_credit')" class="text-right">
                                        <t t-esc="line.get('credit')" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="line.get('balance')" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                    </td>
                                    <td t-if="data['form'].get('enable_filter')" class="text-right">
                                        <t t-esc="line.get('balance_cmp')" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Totaux -->
                    <div class="row">
                        <div class="col-12">
                            <table class="table table-sm">
                                <tr class="border-black font-weight-bold">
                                    <td>Total</td>
                                    <td t-if="data['form'].get('debit_credit')" class="text-right">
                                        <t t-esc="sum_debit" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                    </td>
                                    <td t-if="data['form'].get('debit_credit')" class="text-right">
                                        <t t-esc="sum_credit" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                    </td>
                                    <td class="text-right">
                                        <t t-esc="sum_balance" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                    </td>
                                    <td t-if="data['form'].get('enable_filter')" class="text-right">
                                        <t t-esc="sum_balance_cmp" t-options="{'widget': 'monetary', 'display_currency': company.currency_id}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Action de rapport -->
    <record id="action_report_financial" model="ir.actions.report">
        <field name="name">Financial Report</field>
        <field name="model">financial.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">base_accounting_kit_16.report_financial</field>
        <field name="report_file">base_accounting_kit_16.report_financial</field>
        <field name="binding_model_id" ref="model_financial_report"/>
        <field name="binding_type">report</field>
    </record>
</odoo>