<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Template principal -->
    <template id="report_financial">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2><span t-esc="res_company.name"/>: <span t-esc="data['account_report_id'][1]"/></h2>

                    <div class="row mt32 mb32">
                        <div class="col-3">
                            <strong>Target Moves:</strong>
                            <p t-if="data['target_move'] == 'all'">All Entries</p>
                            <p t-if="data['target_move'] == 'posted'">All Posted Entries</p>
                        </div>
                        <div class="col-3">
                            <p>
                                <strong>Date from :</strong>
                                <span t-esc="data['date_from']"/>
                            </p>
                            <p>
                                <strong>Date to :</strong>
                                <span t-esc="data['date_to']"/>
                            </p>
                        </div>
                    </div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th t-if="data['debit_credit']">Debit</th>
                                <th t-if="data['debit_credit']">Credit</th>
                                <th>Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="get_account_lines" t-as="a">
                                <td>
                                    <span style="color: white;" t-esc="'..' * a.get('level', 0)"/>
                                    <span t-esc="a.get('name')"/>
                                </td>
                                <td t-if="data['debit_credit']" class="text-right">
                                    <span t-esc="a.get('debit')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </td>
                                <td t-if="data['debit_credit']" class="text-right">
                                    <span t-esc="a.get('credit')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="a.get('balance')" t-options="{'widget': 'monetary', 'display_currency': res_company.currency_id}"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>