<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action de rapport Excel -->
    <record id="action_report_financial_xlsx" model="ir.actions.server">
        <field name="name">Financial Report (Excel)</field>
        <field name="model_id" ref="model_account_financial_report_wizard"/>
        <field name="binding_model_id" ref="model_account_financial_report_wizard"/>
        <field name="binding_type">report</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.check_report_xlsx()
        </field>
    </record>

    <!-- Menu pour le rapport Excel -->
    <menuitem id="menu_financial_reports_excel"
              name="Financial Report (Excel)"
              parent="menu_financial_reports"
              action="action_report_financial_xlsx"
              sequence="2"/>
</odoo>
