<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_account_financial_report_tree" model="ir.ui.view">
        <field name="name">account.financial.report.tree</field>
        <field name="model">account.financial.report</field>
        <field name="arch" type="xml">
            <tree string="Account Reports">
                <field name="name"/>
                <field name="parent_id"/>
                <field name="type"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_account_financial_report_form" model="ir.ui.view">
        <field name="name">account.financial.report.form</field>
        <field name="model">account.financial.report</field>
        <field name="arch" type="xml">
            <form string="Account Report">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="parent_id"/>
                            <field name="sequence"/>
                            <field name="type"/>
                            <field name="sign"/>
                        </group>
                        <group>
                            <field name="display_detail" attrs="{'invisible': [('type','not in',['accounts','account_type'])]}"/>
                            <field name="style_overwrite"/>
                            <field name="account_report_id" attrs="{'invisible':[('type','!=','account_report')], 'required':[('type','=','account_report')]}"/>
                            <field name="account_ids" attrs="{'invisible':[('type','!=','accounts')], 'required':[('type','=','accounts')]}" widget="many2many_tags"/>
                            <field name="account_type_ids" attrs="{'invisible':[('type','!=','account_type')], 'required':[('type','=','account_type')]}" widget="many2many_tags"/>
                        </group>
                    </group>
                    <notebook attrs="{'invisible':[('type','!=','sum')]}">
                        <page string="Report Lines">
                            <field name="children_ids">
                                <tree string="Report Lines">
                                    <field name="sequence"/>
                                    <field name="name"/>
                                    <field name="type"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_account_financial_report_search" model="ir.ui.view">
        <field name="name">account.financial.report.search</field>
        <field name="model">account.financial.report</field>
        <field name="arch" type="xml">
            <search string="Account Reports">
                <field name="name" string="Report Name"/>
                <field name="parent_id"/>
                <field name="type"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_account_financial_report" model="ir.actions.act_window">
        <field name="name">Account Reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.financial.report</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_account_financial_report_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new financial report
            </p>
            <p>
                Financial reports allow you to configure your own reports to analyze your company's financial data.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_account_financial_report_config"
              name="Financial Reports"
              parent="account.menu_finance_configuration"
              action="action_account_financial_report"
              sequence="50"/>

</odoo>
