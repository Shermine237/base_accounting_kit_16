<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Rapports financiers standards -->
    <record id="account_financial_report_balance_sheet" model="account.financial.report">
        <field name="name">Balance Sheet</field>
        <field name="type">sum</field>
        <field name="sign">1</field>
        <field name="display_detail">detail_with_hierarchy</field>
        <field name="style_overwrite">1</field>
        <field name="sequence">10</field>
    </record>

    <record id="account_financial_report_profit_loss" model="account.financial.report">
        <field name="name">Profit and Loss</field>
        <field name="type">sum</field>
        <field name="sign">1</field>
        <field name="display_detail">detail_with_hierarchy</field>
        <field name="style_overwrite">1</field>
        <field name="sequence">20</field>
    </record>

    <record id="account_financial_report_cash_flow" model="account.financial.report">
        <field name="name">Cash Flow Statement</field>
        <field name="type">sum</field>
        <field name="sign">1</field>
        <field name="display_detail">detail_with_hierarchy</field>
        <field name="style_overwrite">1</field>
        <field name="sequence">30</field>
    </record>

    <record id="account_financial_report_general_ledger" model="account.financial.report">
        <field name="name">General Ledger</field>
        <field name="type">accounts</field>
        <field name="sign">1</field>
        <field name="display_detail">detail_flat</field>
        <field name="style_overwrite">4</field>
        <field name="sequence">40</field>
    </record>

    <record id="account_financial_report_trial_balance" model="account.financial.report">
        <field name="name">Trial Balance</field>
        <field name="type">accounts</field>
        <field name="sign">1</field>
        <field name="display_detail">detail_flat</field>
        <field name="style_overwrite">4</field>
        <field name="sequence">50</field>
    </record>

    <record id="account_financial_report_partner_ledger" model="account.financial.report">
        <field name="name">Partner Ledger</field>
        <field name="type">accounts</field>
        <field name="sign">1</field>
        <field name="display_detail">detail_flat</field>
        <field name="style_overwrite">4</field>
        <field name="sequence">60</field>
    </record>

    <record id="account_financial_report_aged_receivable" model="account.financial.report">
        <field name="name">Aged Receivable</field>
        <field name="type">accounts</field>
        <field name="sign">1</field>
        <field name="display_detail">detail_flat</field>
        <field name="style_overwrite">4</field>
        <field name="sequence">70</field>
    </record>

    <record id="account_financial_report_aged_payable" model="account.financial.report">
        <field name="name">Aged Payable</field>
        <field name="type">accounts</field>
        <field name="sign">1</field>
        <field name="display_detail">detail_flat</field>
        <field name="style_overwrite">4</field>
        <field name="sequence">80</field>
    </record>
</odoo>
