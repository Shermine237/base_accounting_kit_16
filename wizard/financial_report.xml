<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--    Financial report common form view    -->
        <record id="financial_report_wiz_modified" model="ir.ui.view">
            <field name="name">Financial Report</field>
            <field name="model">financial.report</field>
            <field name="arch" type="xml">
                <form string="Report Options">
                    <group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="account_report_id" options="{'no_create': True}"/>
                            <field name="target_move"/>
                        </group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="debit_credit"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Comparaison" name="comparison">
                            <group>
                                <group>
                                    <field name="enable_filter"/>
                                    <field name="filter_cmp" attrs="{'invisible': [('enable_filter', '=', False)]}"/>
                                </group>
                                <group attrs="{'invisible': [('filter_cmp', '!=', 'filter_date')]}">
                                    <field name="date_from_cmp"/>
                                    <field name="date_to_cmp"/>
                                </group>
                            </group>
                        </page>
                    </notebook>

                    <footer>
                        <button name="check_report" string="Générer le rapport" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Annuler" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!--    Action for financial reports    -->
        <record id="action_account_financial_report" model="ir.actions.act_window">
            <field name="name">Rapports financiers</field>
            <field name="res_model">financial.report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="financial_report_wiz_modified"/>
            <field name="target">new</field>
        </record>

        <!-- Menu items -->
        <menuitem id="menu_financial_reports"
                  name="Rapports financiers"
                  parent="account.menu_finance_reports"
                  sequence="5"
                  groups="account.group_account_user"/>

        <menuitem id="menu_account_financial_reports_tree"
                  name="Standard Reports"
                  parent="menu_financial_reports"
                  action="action_account_financial_report"
                  sequence="1"/>
    </data>
</odoo>
