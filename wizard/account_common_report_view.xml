<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue commune pour les rapports financiers -->
    <record id="account_common_report_view" model="ir.ui.view">
        <field name="name">Account Common Report</field>
        <field name="model">account.common.report</field>
        <field name="arch" type="xml">
            <form string="Report Options">
                <group>
                    <field name="company_id"/>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="target_move" widget="radio"/>
                    </group>
                    <group>
                        <field name="journal_ids" widget="many2many_tags" options="{'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button name="check_report" string="Export PDF" type="object" default_focus="1" class="oe_highlight"/>
                    <button name="export_excel" string="Export Excel" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
